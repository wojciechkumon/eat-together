{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "esNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/"
  ]
}
